{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tag_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.tag_list'|trans }}</h1>


    {# Odnośnik do formularza dodawania nowego rekordu #}
    <div class="mb-3">
        <a href="{{ path('tag_create') }}" class="btn btn-primary">
            {{ 'action.add_new'|trans }}
        </a>
    </div>

    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'tag.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'tag.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'tag.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'tag.updatedAt') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in pagination.items %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.title }}</td>
                    <td>{{ tag.createdAt|format_date('long') }}</td>
                    <td>{{ tag.updatedAt|format_date('long') }}</td>
                    <td>
                        {# Odnośnik do formularza wyswietlania rekordu #}
                        <a href="{{ path('tag_show', {id: tag.id}) }}" title="{{ 'action.show'|trans }}" class="btn btn-info btn-sm">
                            {{ 'action.show'|trans }}
                        </a>
                        {# Odnośnik do formularza edycji  rekordu #}
                        <a href="{{ path('tag_edit', {id: tag.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-warning btn-sm">
                            {{ 'action.edit'|trans }}
                        </a>

                        {# Odnośnik do formularza usuniecia rekordu #}
                        <a href="{{ path('tag_delete', {id: tag.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-danger btn-sm" onclick="return confirm('{{ 'message.confirm_delete'|trans }}');">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        {# Ostylowane komunikaty, gdy brak rekordów na liście #}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
    {% endif %}
{% endblock %}
